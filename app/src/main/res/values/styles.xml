<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="TextAutoResizing" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">24sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">16sp</item>
        <item name="autoSizeMaxTextSize">100sp</item>
    </style>

    <style name="IconMatchItemHome">
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_width">18dp</item>
        <item name="android:tint">@color/browser_actions_title_color</item>
    </style>

</resources>
